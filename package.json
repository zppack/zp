{
  "name": "@zppack/zp",
  "version": "0.0.1",
  "description": "A front-end project engineering system which highly supports customization through modularization, middlewares and plugins.",
  "keywords": [
    "front-end project engineering",
    "project engineering",
    "engineering",
    "zp",
    "zppack"
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "config"
  ],
  "bin": {
    "zp": "dist/bin/zp.js"
  },
  "scripts": {
    "start": "npm run build && npm run debug --",
    "prebuild": "npm run clean",
    "build": "babel src -d dist",
    "debug": "node dist/bin/zp.js",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "release": "standard-version && npm publish --access public",
    "release:first": "standard-version --first-release && npm publish --access public",
    "postrelease": "git push && git push origin --tags",
    "postrelease:first": "git push -u origin master && git push origin --tags",
    "postinstall": "node dist/scripts/post-install.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zppack/zp.git"
  },
  "author": "John Chan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zppack/zp/issues"
  },
  "homepage": "https://github.com/zppack/zp#readme",
  "dependencies": {
    "@ltd/j-toml": "^1.6.0",
    "@zppack/glob": "^1.0.1",
    "@zppack/log": "^1.0.2",
    "chalk": "^4.1.0",
    "commander": "^7.1.0",
    "fs-extra": "^9.1.0",
    "import-global": "^0.1.0",
    "inquirer": "^8.0.0",
    "merge-packages": "^0.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.1"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  }
}
